<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.lastname %></td>
    <td><%= employee.firstname %></td>
    <td><%= employee.secondname %></td>
    <td><%= employee.initials %></td>
    <td><%= employee.handbook_place_employee.fullname %></td>
    <td><%= employee.handbook_structual_unit.fullname %></td>
    <td><%= employee.handbook_division.fullname %></td>
    <td><%= employee.handbook_jobposition.fullname %></td>
    <td><%= employee.appointment_date %></td>
    <td><%= employee.admission %></td>
    <td><%= employee.previous_job_awareness %></td>
    <td><%= employee.admission_approval %></td>
    <td><%= employee.admission_order %></td>
    <td><%= employee.temporary_restriction_of_exit_from_russia_contact_date %></td>
    <td><%= employee.dismissal_order %></td>
    <td><%= employee.admission_act_of_termination %></td>
    <td><%= employee.admission_message_of_termination %></td>
    <td><%= employee.foreign_passport %></td>
    <td><%= employee.passport_number %></td>
    <td><%= employee.passport_issuing_authority %></td>
    <td><%= employee.having_relatives_abroad %></td>
    <td><%= employee.who_abroad %></td>
    <td><%= employee.additional_information %></td>
    <td><%= link_to 'Показать', employee %></td>
    <td><%= link_to 'Редактировать', edit_employee_path(employee) %></td>
    <td><%= link_to 'Удалить', employee, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
<% end %>
</table>

