    <th><%= Employee.human_attribute_name(:initials) %></th>
    <th><%= Employee.human_attribute_name(:handbook_place_employee) %></th>
    <th><%= Employee.human_attribute_name(:handbook_structual_unit) %></th>
    <th><%= Employee.human_attribute_name(:handbook_division) %></th>
    <th><%= Employee.human_attribute_name(:handbook_jobposition) %></th>
    <th><%= Employee.human_attribute_name(:appointment_date) %></th>
    <th><%= Employee.human_attribute_name(:admission) %></th>
